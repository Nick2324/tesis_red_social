<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="sportsallaround.snadeportivo.eventos.gui.ListadoSolicitudes">

    <TextView
        android:id="@+id/textview_title_solicitud_de_participante"
        android:text="@string/solicitud_de_participantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <fragment
        android:name="sportsallaround.utils.gui.ListaConFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_solicitud_de_participante"
        android:tag="@string/fragment_solicitud_de_participante"/>

</LinearLayout>
