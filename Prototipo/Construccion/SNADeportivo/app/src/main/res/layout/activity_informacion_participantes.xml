<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="sportsallaround.snadeportivo.eventos.gui.InformacionParticipantes">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="sportsallaround.utils.gui.TituloActividad"
        android:tag="@string/general_participantes"></fragment>

    <TextView android:text="@string/numero_participantes" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numero_participantes_evento_info_general"
        android:hint="@string/hint_numero_participantes"
        android:inputType="number"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="sportsallaround.utils.gui.TituloActividad"
        android:tag="@string/caracteristicas_participantes"></fragment>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="sportsallaround.utils.gui.SpinnerDesdeBD"
        android:id="@+id/spinner_genero"></fragment>

    <TextView android:text="@string/rango_minimo_edad" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rango_minimo_edad_evento_info_general"
        android:hint="@string/hint_rango_minimo_edad"
        android:inputType="number"/>

    <TextView android:text="@string/rango_maximo_edad" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rango_maximo_edad_evento_info_general"
        android:hint="@string/hint_rango_maximo_edad"
        android:inputType="number"/>

</LinearLayout>
