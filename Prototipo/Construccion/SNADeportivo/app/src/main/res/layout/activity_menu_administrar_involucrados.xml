<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sportsallaround.snadeportivo.eventos.gui.MenuAdministrarInvolucrados"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:id="@+id/button_aniadir_participantes"
        android:text="@string/boton_aniadir_participantes"
        android:onClick="startAniadirPart"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:id="@+id/button_invitar_participantes"
        android:text="@string/button_invitar_participantes"
        android:onClick="startInvitarPart"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:id="@+id/button_consultar_participante"
        android:text="@string/boton_consultar_participantes"
        android:onClick="startConsultarPart"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:id="@+id/button_caracteristicas_participantes"
        android:text="@string/boton_caracteristicas_participantes"
        android:onClick="startCaracteristicasPart"/>

</LinearLayout>
