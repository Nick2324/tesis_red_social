<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="sportsallaround.snadeportivo.eventos.GestionEventosLista">

    <fragment
        android:name="sportsallaround.utils.gui.DescripcionGo"
        android:id="@+id/fragment_switcher_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownWidth="wrap_content"
        android:gravity="center"
        android:layout_gravity="center" />


    <fragment
        android:name="sportsallaround.snadeportivo.eventos.SpinnerEventos"
        android:id="@+id/fragment_tipo_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownWidth="wrap_content"
        android:gravity="center"
        android:layout_gravity="center" />

    <fragment
        android:name="sportsallaround.utils.gui.ListaConFiltro"
        android:id="@+id/fragment_lista_eventos"
        android:tag="@string/lista_evento_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownWidth="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="5"/>

    <Button
        android:id="@+id/button_crear_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crear_evento"
        android:gravity="center"
        android:layout_gravity="center"/>

</LinearLayout>
