<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="sportsallaround.snadeportivo.eventos.ManejoParticipantes">

    <TextView
        android:id="@+id/textview_title_eventos"
        android:text="@string/title_activity_gestion_eventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textview_barra_horizontal_titulos"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF33B5E5"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textview_title_solicitud_participante"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textview_barra_horizontal_solicitud_participante"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#D3D3D3"
        android:layout_gravity="center"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview_lista_solicitudes_parti"></ListView>
</LinearLayout>
