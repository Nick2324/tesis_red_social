<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="sportsallaround.snadeportivo.eventos.GestionEventos">

    <fragment
        android:name="sportsallaround.utils.gui.TituloActividad"
        android:id="@+id/fragment_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextSwitcher
        android:id="@+id/switcher_lista_eventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    </TextSwitcher>

    <fragment android:name="sportsallaround.snadeportivo.eventos.SpinnerEventos"
        android:id="@+id/fragment_tipo_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownWidth="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"/>


    <EditText
        android:id="@+id/edittext_busqueda_administracion_eventos"
        android:hint="@string/hint_busqueda_administracion_eventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    
    <ListView
        android:id="@+id/listview_lista_eventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_gravity="center">
    </ListView>

    <Button
        android:id="@+id/button_crear_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crear_evento"
        android:gravity="center"
        android:layout_gravity="center"/>

</LinearLayout>
