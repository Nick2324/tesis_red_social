<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sportsallaround.snadeportivo.eventos.GestionEventos">

    <TextView
        android:id="@+id/title_eventos"
        android:text="@string/title_activity_gestion_eventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/barra_horizontal_titulos"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF33B5E5"
        android:layout_below="@id/title_eventos"/>

    <TextSwitcher
        android:id="@+id/switcher_lista_eventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barra_horizontal_titulos">

    </TextSwitcher>

    <Spinner
        android:id="@+id/spinner_tipo_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barra_horizontal_titulos"
        android:dropDownWidth="wrap_content"
        android:entries="@array/tipos_eventos">

    </Spinner>

    <ListView
        android:id="@+id/lista_eventos"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/switcher_lista_eventos">
    </ListView>

</RelativeLayout>
