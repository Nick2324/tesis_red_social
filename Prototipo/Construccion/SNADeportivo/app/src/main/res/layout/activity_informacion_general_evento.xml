<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrolling_lay_info_general_evento">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="sportsallaround.snadeportivo.eventos.InformacionGeneralEvento">

        <fragment
            android:name="sportsallaround.utils.gui.TituloActividad"
            android:id="@+id/fragment_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView android:text="@string/nombre_evento" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nombre_evento"
            android:id="@+id/nombre_evento_info_general"/>

        <TextView android:text="@string/descripcion_evento" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/scrolling_descripcion_evento_info_general">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descripcion_evento_info_general"
                android:hint="@string/hint_descripcion_evento"/>
        </ScrollView>

        <TextView
            android:id="@+id/textview_imagen_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imagen_evento"
            android:layout_gravity="center"/>

        <fragment
            android:name="sportsallaround.utils.gui.PickImagen"
            android:id="@+id/fragment_boton_imagen_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <fragment
            android:name="sportsallaround.utils.gui.SpinnerDesdeBD"
            android:id="@+id/fragment_tipo_deporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dropDownWidth="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"/>

        <TextView
            android:text="@string/fecha_inicio_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fecha_inicio_evento_info_general"
            android:hint="@string/hint_fecha_inicio_evento"/>

        <TextView android:text="@string/fecha_final_evento" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fecha_final_evento_info_general"
            android:hint="@string/hint_fecha_final_evento"/>

        <TextView android:text="@string/hora_inicio_evento" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hora_inicio_evento_info_general"
            android:hint="@string/hint_hora_inicio_evento"/>

        <TextView android:text="@string/hora_final_evento" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hora_final_evento_info_general"
            android:hint="@string/hint_hora_final_evento"/>

        <TextView
            android:text="@string/fecha_creacion_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fecha_creacion_evento"
            android:editable="false"/>

    </LinearLayout>

</ScrollView>